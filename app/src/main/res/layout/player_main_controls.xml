<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/activityplayer_linearLayout_main">

	<FrameLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_weight="1.0">

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@android:drawable/ic_delete"
			android:layout_gravity="center_vertical|center_horizontal"
			android:id="@+id/activityplayer_imageView_main"/>

	</FrameLayout>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="#7C000000"
		android:padding="4dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Small Text"
			android:layout_alignParentLeft="true"
			android:id="@+id/activityplayer_textView_seek_time"
			android:textColor="#CCFFFFFF"
			android:layout_marginLeft="48dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Small Text"
			android:layout_alignParentRight="true"
			android:id="@+id/activityplayer_textView_seek_duration"
			android:textColor="#CCFFFFFF"
			android:layout_marginRight="48dp"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:background="#7C000000"
		android:paddingLeft="4dp">

		<ImageButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="48dp"
			android:layout_width="48dp"
			android:src="@drawable/ic_action_shuffle"
			android:id="@+id/activityplayer_imageButton_shuffle"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:scaleType="fitCenter"/>

		<ImageButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="48dp"
			android:layout_width="48dp"
			android:src="@drawable/ic_action_repeat"
			android:id="@+id/activityplayer_imageButton_repeat"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:scaleType="fitCenter"
			android:layout_marginRight="4dp"/>

		<SeekBar
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/activityplayer_seekBar"
			android:padding="8dp"
			android:layout_centerInParent="true"
			android:paddingRight="16dp"
			android:layout_toRightOf="@id/activityplayer_imageButton_shuffle"
			android:layout_toLeftOf="@id/activityplayer_imageButton_repeat"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:background="#7C000000"
		android:paddingTop="12dp"
		android:paddingBottom="16dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp">

		<ToggleButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="64dp"
			android:layout_width="64dp"
			android:background="@drawable/btn_play_pause"
			android:id="@+id/activityplayer_imageButton_play_pause"
			android:layout_centerInParent="true"
			android:textOff=""
			android:textOn=""/>

		<ImageButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/ic_action_prev"
			android:id="@+id/activityplayer_imageButton_prev"
			android:layout_toLeftOf="@id/activityplayer_imageButton_play_pause"
			android:layout_centerVertical="true"
			android:scaleType="fitCenter"/>

		<ImageButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/ic_action_next"
			android:id="@+id/activityplayer_imageButton_next"
			android:layout_toRightOf="@id/activityplayer_imageButton_play_pause"
			android:layout_centerVertical="true"
			android:scaleType="fitCenter"/>

	</RelativeLayout>

</LinearLayout>
